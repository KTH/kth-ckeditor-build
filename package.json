{
  "name": "@kth/kth-ckeditor-build",
  "version": "4.0.0",
  "description": "Custom build of the CKEditor for use in KTH websites.",
  "automaticPublish": "true",
  "main": "ckeditor/ckeditor.js",
  "scripts": {
    "build": "gulp build",
    "watch": "gulp build:watch",
    "prestart": "npm run build",
    "server": "nodemon server/app.js",
    "start": "npm-run-all --parallel watch server",
    "postversion": "git push && git push --tags",
    "test": "echo \"ok\"",
    "prepare": "bash -c 'if [ -f ./node_modules/.bin/husky ]; then husky install; fi'"
  },
  "keywords": [
    "kth",
    "ckeditor",
    "node"
  ],
  "author": {
    "name": "KTH Team Webb",
    "email": "web-developers@kth.se"
  },
  "license": "MIT",
  "files": [
    "ckeditor",
    "cssOverrides",
    "gulpfile.js",
    "customConfig",
    "plugins"
  ],
  "devDependencies": {
    "bootstrap": "^5.1.3",
    "eslint": "^7.32.0",
    "express": "^4.17.1",
    "gulp": "^4.0.2",
    "hbs": "^4.1.2",
    "husky": "^9.1.4",
    "jquery": "^3.6.0",
    "kth-style": "^7.0.2",
    "limax": "^3.0.0",
    "merge-stream": "^2.0.0",
    "morgan": "^1.10.0",
    "multer": "^1.4.3",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.4.1",
    "pretty-quick": "3.1.1",
    "babel-eslint": "^10.1.0",
    "@kth/eslint-config-kth": "^2.0.1"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:KTH/kth-ckeditor-build.git"
  },
  "engines": {
    "node": ">=16.6.2"
  },
  "husky": {
    "hooks": {
      "pre-push": "npm run test",
      "pre-commit": "pretty-quick --staged"
    }
  },
  "// (prettier)": "configuration version 2020-06-15 - might also reside in .prettierrc.json",
  "prettier": {
    "arrowParens": "avoid",
    "printWidth": 120,
    "semi": false,
    "singleQuote": true,
    "trailingComma": "es5"
  }
}
